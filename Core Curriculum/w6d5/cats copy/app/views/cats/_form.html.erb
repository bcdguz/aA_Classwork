<% if type == :new %>
    <% action_url = cats_url %>
    <% button_text = "Create cat" %>
<% elsif type == :edit %>
    <% action_url = cat_url(cat.id) %>
    <% button_text = "Update cat" %>
<% end %>

<form action="<%= action_url %>" method="POST">

    <% if type == :edit %>
        <input type="hidden" name="_method" value="PATCH">
    <% end %>

    <label>Birthdate:
        <input type="date" name="cat[birth_date]" value="<%= cat.birth_date %>" />
    </label>

    <br>

    <label>Color:
        <input type="string" name="cat[color]" value="<%= cat.color %>">
    </label>

    <label for="color">Choose a color:</label>
    <select name="cats[color]" id="color">
        <option value="" disabled>Select a color</option>
        <option value="black"
        <%= cat.color == "black" ? "selected" : "" %>
        >Black</option>
        <option value="brown">Brown</option>
        <option value="grey">Grey</option>
        <option value="orange">Orange</option>
    </select>

    <br>

    <label>Name:
        <input type="string" name="cat[name]"value="<%= cat.name %>" >
    </label>

    <br>

    <!---<label>Sex:
        <input type="string" name="cat[sex]" value="<%= cat.sex %>">
    </label>--->

    <br>

    <label for="description">Description:
        <textarea id="description" name="cat[description]"></textarea>
    </label>

    <br>

    <input 
        type="radio"
        id="male"
        name="cat[sex]"
        value="M" 
        <%= cat.sex == "M" ? "checked" : "" %>
        > <label for="male">Male</label>

    <input 
        type="radio"
        id="female"
        name="cat[sex]"
        value="F"> <label for="female">Female</label>

    <input 
        type="radio"
        id="other"
        name="cat[sex]"
        value="O"> <label for="male">Other</label>


    <input
        type="submit"
        value="submit">

</form>


